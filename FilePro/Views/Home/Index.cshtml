@using System.Collections.Generic;
@{
    @* ViewData["Title"] = "Home Page"; *@
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";

}
@{
    var imgs = new List<string> { "mountain.jpg", "danau.jpg", "lands.jpg"};
    var idx = 0;
    var active = idx == 1 ? "active" : "";
}
<div id="main-carousel" class="carousel slide bg-dark" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#main-carousel" data-slide-to="0"></li>
        <li data-target="#main-carousel" data-slide-to="1"></li>
        <li data-target="#main-carousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        @foreach (var item in imgs)
        {
            {
                idx += 1;
            }
            <div class="carousel-item">
                <img src='@Url.Content("~/slider/")@item' class="d-block w-100" alt="...">
            </div>

        }
    </div>
    <button type="button" class="carousel-control-prev" data-target="#main-carousel">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Prevoius</span>
    </button>
    <button type="button" class="carousel-control-next" data-target="#main-carousel">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
    <div class="carousel-overlay"></div>
</div>

@section Scripts {

<script>
    $(document).ready(function () {
        $("li[data-target='#main-carousel']:first-child").addClass("active");
        $(".carousel-item:first-child").addClass("active");
        $(".carousel").carousel();
        $(".carousel-item img").css({
            "height":"576px",
            "object-fit":"cover"
        })

    });
</script>
}